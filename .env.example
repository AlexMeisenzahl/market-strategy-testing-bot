# Environment Configuration Template
# Copy this file to .env and fill in your values

# Application Environment
TRADING_BOT_ENV=production
PYTHONUNBUFFERED=1
DEBUG=false

# Dashboard Configuration
DASHBOARD_PORT=5000
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Database Configuration
DATABASE_URL=sqlite:///data/bot.db

# Monitoring Ports
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
REDIS_PORT=6379

# Grafana Admin Credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-this-password

# Sentry Integration (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# API Keys (Keep these secure!)
TELEGRAM_BOT_TOKEN=
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Security Settings
JWT_SECRET_KEY=change-this-jwt-secret-key
JWT_EXPIRATION_HOURS=24
API_RATE_LIMIT=100/hour

# Feature Flags
FEATURE_REAL_TRADING=false
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_TELEGRAM_NOTIFICATIONS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_PROMETHEUS_METRICS=true

# Trading Configuration
PAPER_TRADING=true
MAX_TRADE_SIZE=1000
MIN_PROFIT_MARGIN=0.02

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
WORKERS=2
WORKER_CONNECTIONS=1000

# Weather Trading
NOAA_API_KEY=your_noaa_api_key_here

# Mobile API
API_JWT_SECRET=your_very_long_random_secret_key_change_this
API_PORT=8000
API_HOST=0.0.0.0

# Telegram (notifications only)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Exchange API Keys (Optional)
KALSHI_API_KEY=your_kalshi_api_key_here
